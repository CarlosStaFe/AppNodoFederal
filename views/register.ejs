<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Carlos A. Mayans">
    <meta name="generator" content="DesarrolloWeb">

    <%- include('partials/head'); %>
</head>

<body">

    <header>
        <%- include('partials/header'); %>
    </header>

    <main>
        <div class="container">
            <form class="row g-2 col-lg-12 shadow p-2 needs-validation text-primary" novalidate action="/register"
                method="POST">
                <div class="bg-primary text-white p-1 text-center">
                    <h3>Registrar Usuario</h3>
                </div>
                <div class="col-lg-5 col-md-12 position-relative">
                    <label for="apelNombre" class="form-label">Apellido y Nombres</label>
                    <input id="apelNombre" name="apelNombre" type="text" class="form-control" required>
                    <div class="invalid-tooltip">Debe ingresar el apellido y nombres</div>
                </div>
                <div class="col-lg-3 col-md-12 position-relative">
                    <label for="telefono" class="form-label">Teléfono</label>
                    <input id="telefono" name="telefono" type="tel" class="form-control" required>
                    <div class="invalid-tooltip">Debe ingresar un teléfono de contacto</div>
                </div>
                <div class="col-lg-4 col-md-12 position-relative">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" name="email" type="email" class="form-control" required>
                    <div class="invalid-tooltip">Debe ingresar un correo electrónico</div>
                </div>
                <div class="col-md-8 position-relative">
                    <label for="nodo" class="form-label">Nodo</label>
                    <select id="nodo" class="form-select">
                        <option>Usuario</option>
                        <option>Administrador</option>
                        <option>Sistemas</option>
                    </select>
                </div>
                <div class="col-md-4 position-relative">
                    <label for="rolUsuario" class="form-label">Rol de Usuario</label>
                    <select id="rolUsuario" class="form-select">
                        <option selected>Socio</option>
                        <option>Nodo</option>
                        <option>Admin</option>
                    </select>
                </div>
                <div class="col-md-2 position-relative">
                    <label for="nivelUsuario" class="form-label">Nivel</label>
                    <input id="nivelUsuario" name="nivelUsuario" type="text" class="form-control" required>
                    <div class="invalid-tooltip">Debe ingresar un nivel para el usuario</div>
                </div>
                <div class="col-md-12 col-lg-6 position-relative">
                    <label for="usuario" class="form-label">Usuario</label>
                    <input id="usuario" name="usuario" type="text" class="form-control" required>
                    <div class="invalid-tooltip">Debe ingresar el nombre del usuario para el sistema</div>
                </div>
                <div class="col-md-12 col-lg-6 position-relative">
                    <label for="password" class="form-label">Contraseña</label>
                    <input id="password" name="password" type="password" class="form-control" required>
                    <div class="invalid-tooltip">Debe ingresar la contraseña del usuario</div>
                </div>
                <div class="col-md-12 col-lg-2 form-check my-4 mx-3 py-3 px-4">
                    <label for="activo" class="form-check-label">Activo?</label>
                    <input id="activo" name="activo" class="form-check-input" type="checkbox" value="">
                </div>
    
                <div class="bg-transparent borde-primary">
                    <a href="/usuarios" type="button" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>
        </div>    
    </main>

    <footer>
        <%- include('partials/footer'); %>
    </footer>

    <!-- Script para mostrar los errores en los input -->
    <script>
        (() => {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>

    <script src="js/bootstrap.bundle.min.js"></script>

</body>

</html>